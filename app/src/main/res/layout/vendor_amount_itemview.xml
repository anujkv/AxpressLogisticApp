<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/margin2dp"
    android:layout_marginTop="@dimen/margin1dp"
    android:layout_marginRight="@dimen/margin2dp"
    android:layout_marginBottom="@dimen/margin1dp"
    app:cardCornerRadius="@dimen/margin10dp"
    app:cardMaxElevation="@dimen/margin20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/from_branch"
                android:textColor="@color/primaryTextColor"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_from_branch"
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:editable="false"
                android:textSize="@dimen/text12sp"
                android:textColor="@color/primaryTextColor"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/to_branch"
                android:textColor="@color/primaryTextColor"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_to_branch"
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:editable="false"
                android:textSize="@dimen/text12sp"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/valid_from"
                android:textColor="@color/primaryTextColor"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_valid_from"
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:editable="false"
                android:textSize="@dimen/text12sp"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/valid_to"
                android:textColor="@color/primaryTextColor"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_valid_to"
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:editable="false"
                android:textSize="@dimen/text12sp"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="@string/amount"
                android:textColor="@color/primaryTextColor"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="@dimen/margin0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:textSize="@dimen/text12sp"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/primaryTextColor" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
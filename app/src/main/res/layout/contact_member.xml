<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/member_contact_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin15dp"
    app:cardCornerRadius="@dimen/margin20dp"
    android:layout_marginBottom="@dimen/margin1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin10dp"
        android:gravity="center">
        <TextView
            android:id="@+id/emplid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginRight="@dimen/margin10dp"
            android:textSize="@dimen/text10sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/text12sp"
            android:layout_marginRight="@dimen/margin10dp"/>
        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginRight="@dimen/margin10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginRight="@dimen/margin10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dept_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginRight="@dimen/margin10dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/branch_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:layout_marginRight="@dimen/margin10dp"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/close_id"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cancel_black_18dp" />
    </LinearLayout>



</android.support.v7.widget.CardView>
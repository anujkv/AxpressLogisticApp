<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:layout_marginBottom="0.5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/leaveAppliedCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1 Jul"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtLeaveReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sick leave"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtApprovedStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:text="Approved"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txtInTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="09:00:05"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txtOutTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="19:10:05"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/txtSunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="19:10:05"
                    android:gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/days"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CL"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtpin_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
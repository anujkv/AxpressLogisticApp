<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_marginBottom="0.5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/leaveAppliedCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.constraint.ConstraintLayout
                android:layout_width="70dp"
                android:layout_height="70dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/leaveStatusIndicator"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/transpant"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/txttype"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="CL"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/leaveStatusIndicator"
                    app:layout_constraintEnd_toEndOf="@+id/leaveStatusIndicator"
                    app:layout_constraintStart_toStartOf="@+id/leaveStatusIndicator"
                    app:layout_constraintTop_toTopOf="@+id/leaveStatusIndicator" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/txtpin_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"/>
            <TextView
                android:id="@+id/txtleave_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/txtid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reminder"
                    android:inputType="textMultiLine"
                    android:textSize="14sp"
                    android:maxLines="2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtfromdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="16 th july 2018, 10:00AM"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtappliedDate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="16 th july 2018"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_mode_edit_black_24dp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
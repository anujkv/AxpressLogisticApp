<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.it2.axpresslogisticapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher24s"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher24s_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".acitvities.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".acitvities.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".acitvities.RegistrationActivity"
            android:label="@string/signup" />
        <activity
            android:name=".acitvities.LoginActivity"
            android:label="@string/loginPage" />
        <activity
            android:name=".acitvities.OperationActivity"
            android:label="@string/operations" />
        <activity
            android:name=".acitvities.MainHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".acitvities.DocketEnquiry"
            android:label="@string/docket_enquiry" />
        <activity
            android:name=".acitvities.HrmsActivity"
            android:label="@string/hrms" />
        <activity
            android:name=".acitvities.MarkAttendanceActivity"
            android:label="@string/mark_attendance" />
        <activity
            android:name=".acitvities.AttendanceSummaryActivity"
            android:label="@string/attendance_summary" />
        <activity
            android:name=".acitvities.LeaveInfoActivity"
            android:label="@string/leave_info" />
        <activity
            android:name=".acitvities.VehicalEnquiryActivity"
            android:label="@string/vehical_enquiry" />
        <activity
            android:name=".acitvities.AddCustomerActivity"
            android:label="@string/add_customer" />
        <activity
            android:name=".acitvities.QRCodeScanningActivity"
            android:label="@string/qrcode"></activity>
    </application>

</manifest>